# Server Configuration
PORT=3000
NODE_ENV=production

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_token_here
HUBSPOT_JOB_OBJECT_TYPE=tracker_jobs
HUBSPOT_JOB_ID_PROPERTY=tracker_job_id
HUBSPOT_JOB_NAME_PROPERTY=job_name
HUBSPOT_JOB_STATUS_PROPERTY=job_status
HUBSPOT_JOB_CREATED_DATE_PROPERTY=job_created_date_tracker
HUBSPOT_JOB_TYPE_PROPERTY=job_type
HUBSPOT_ENGAGEMENT_DIRECTOR_PROPERTY=engagement_director
HUBSPOT_JOB_VALUE_PROPERTY=job_value
HUBSPOT_JOB_OWNER_PROPERTY=job_owner
HUBSPOT_DEAL_NAME_PROPERTY=dealname
HUBSPOT_DEAL_SERVICE_LINE_PROPERTY=service_line
HUBSPOT_DEAL_SERVICE_LINE_RETAINED_VALUE=Retained Search
HUBSPOT_COMPANY_NAME_PROPERTY=name
HUBSPOT_DEAL_CREATED_DATE_PROPERTY=createdate

# TrackerRMS Configuration (Read-Only API Access)
TRACKER_API_URL=https://api.trackersoftware.com/v1
TRACKER_API_KEY=your_tracker_api_key_here

# Polling Configuration
POLLING_ENABLED=true
POLLING_INTERVAL_HOURS=24

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Matching Configuration
MATCHING_CREATED_DATE_WINDOW_DAYS=14

# Logging
LOG_LEVEL=info
